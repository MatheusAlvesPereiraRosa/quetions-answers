<%- include('../views/partials/header') %> 

<%- include('../views/partials/navbar') %> 

<body>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>

        <p><%= pergunta.descricao %></p>

        <hr>

        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark my-3">Enviar</button>
        </form>

        <hr>

        <h3>Respostas</h3>

        <hr>

        <% respostas.forEach(resposta => { %>
            <div class="card my-3">
                <div class="card-body">
                    <%= resposta.corpo %>
                </div>
            </div>
        <% }) %>
    </div>

</body>
    
<%- include('../views/partials/footer') %>   